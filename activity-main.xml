<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/third_gray"
        android:id="@+id/layout_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="top"
            android:background="@color/black"
            android:orientation="vertical">


            <EditText
                android:id="@+id/expression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="textPersonName"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:ellipsize="none"
                android:textSize="80sp" />

            <EditText
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="textPersonName"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:textSize="45sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/third_gray"
            android:id="@+id/layer1">


            <Button
                android:id="@+id/btn_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textColor="@color/scarlet"
                android:layout_margin="7dp"
                android:padding="9dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_c" />

            <Button
                android:id="@+id/btn_modulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textColor="@color/malachite"
                android:layout_margin="7dp"
                android:padding="9dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_modulo" />

            <Button
                android:id="@+id/btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="39sp"
                android:textColor="@color/malachite"
                android:layout_margin="7dp"
                android:padding="9dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_remove" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textColor="@color/malachite"
                android:layout_margin="7dp"
                android:padding="9dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_divide" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/layer2">


            <Button
                android:id="@+id/btn_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_seven" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_eight" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_nine" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textColor="@color/malachite"
                android:layout_margin="7dp"
                android:padding="9dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_multiply" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/layer3">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_four" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_five" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_six" />

            <Button
                android:id="@+id/btn_subt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textColor="@color/malachite"
                android:layout_margin="3dp"
                android:padding="9dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_subt" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/layer4">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_one" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_two" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_three" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textColor="@color/malachite"
                android:layout_margin="7dp"
                android:padding="9dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_add" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/layer5">

            <Button
                android:id="@+id/btn_zeroo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_zeroo"/>

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_zero" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="17dp"
                android:backgroundTint="@color/third_gray"
                android:text="@string/btn_dot" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="45sp"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="10dp"
                android:backgroundTint="@color/malachite"
                android:text="@string/btn_equal" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
